<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colores principales de NovelBook -->
    <Color x:Key="Primary">#8B5CF6</Color> <!-- Morado principal -->
    <Color x:Key="PrimaryDark">#7C3AED</Color> <!-- Morado más oscuro -->
    <Color x:Key="PrimaryLight">#A78BFA</Color> <!-- Morado más claro -->
    
    <!-- Colores de fondo -->
    <Color x:Key="BackgroundDark">#1A1A1A</Color> <!-- Fondo principal oscuro -->
    <Color x:Key="BackgroundMedium">#2D2D2D</Color> <!-- Fondo de tarjetas -->
    <Color x:Key="BackgroundLight">#3D3D3D</Color> <!-- Fondo de elementos -->
    
    <!-- Colores de texto -->
    <Color x:Key="TextPrimary">#FFFFFF</Color> <!-- Texto principal blanco -->
    <Color x:Key="TextSecondary">#B0B0B0</Color> <!-- Texto secundario gris -->
    <Color x:Key="TextMuted">#808080</Color> <!-- Texto deshabilitado -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="Secondary">#E0E0E0</Color>
    <Color x:Key="OffBlack">#121212</Color>
    <Color x:Key="SecondaryDarkText">#606060</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    
    <!-- Otros colores -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Colores del sistema (no cambiar estos nombres) -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#F7F7F7</Color>
    <Color x:Key="Gray200">#E5E5E5</Color>
    <Color x:Key="Gray300">#D4D4D4</Color>
    <Color x:Key="Gray400">#A3A3A3</Color>
    <Color x:Key="Gray500">#737373</Color>
    <Color x:Key="Gray600">#525252</Color>
    <Color x:Key="Gray900">#171717</Color>
    <Color x:Key="Gray950">#0A0A0A</Color>
</ResourceDictionary>