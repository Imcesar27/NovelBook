<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="NovelBook.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:NovelBook.Views"
       xmlns:extensions="clr-namespace:NovelBook.Extensions"
       FlyoutBehavior="Disabled">

    <!-- Estilo del Shell -->
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundDarkLight}, Dark={StaticResource BackgroundDark}}" />
                <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}" />
                <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}" />
                <Setter Property="Shell.NavBarHasShadow" Value="True"/>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Header del men칰 lateral -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
              HeightRequest="200"
              Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Text="游닄" 
                   FontSize="60"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Row="0"/>

            <Label Text="NOVELBOOK" 
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   Grid.Row="1"/>

            <Label Text="{extensions:Translate YourPersonalLibrary}"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                   HorizontalOptions="Center"
                   Grid.Row="2"
                   Margin="0,0,0,10"/>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Items principales con TabBar -->
    <TabBar>
        <Tab Title="{extensions:Translate Library}" Icon="library_icon.png" Route="LibraryTab">
            <ShellContent Title="Mi Librer칤a" Route="LibraryPage" ContentTemplate="{DataTemplate views:LibraryPage}"/>
        </Tab>

        <Tab Title="{extensions:Translate Explore}" Icon="explore_icon.png" Route="ExploreTab">
            <ShellContent Title="Explorar Novelas" Route="ExplorePage" ContentTemplate="{DataTemplate views:ExplorePage}"/>
        </Tab>

        <Tab Title="{extensions:Translate History}" Icon="history_icon.png" Route="HistoryTab">
            <ShellContent Title="Historial de Lectura" Route="HistoryPage" ContentTemplate="{DataTemplate views:HistoryPage}"/>
        </Tab>

        <Tab Title="{extensions:Translate More}" Icon="more_icon.png" Route="MoreTab">
            <ShellContent Title="M치s Opciones" Route="MorePage" ContentTemplate="{DataTemplate views:MorePage}"/>
        </Tab>
    </TabBar>

    <!-- Items del men칰 lateral (Flyout) -->
    <FlyoutItem Title="{extensions:Translate Settings}" Icon="settings_icon.png" Route="SettingsTab">
        <ShellContent Title="Configuraci칩n" Route="SettingsPage" ContentTemplate="{DataTemplate views:SettingsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="{extensions:Translate Downloads}" Icon="download_icon.png" Route="DownloadsTab">
        <ShellContent Title="Descargas" Route="DownloadsPage" ContentTemplate="{DataTemplate views:DownloadsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="{extensions:Translate Statistics}" Icon="stats_icon.png" Route="StatsTab">
        <ShellContent Title="Estad칤sticas" Route="StatsPage" ContentTemplate="{DataTemplate views:StatsPage}"/>
    </FlyoutItem>

    <!-- P치ginas no en Tabs ni Flyout (solo navegaci칩n por rutas) -->
    <!-- No van aqu칤, se registran en AppShell.xaml.cs -->

    <!-- Footer men칰 -->
    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10,10" BackgroundColor="{StaticResource BackgroundMedium}">
            <Button Text="{extensions:Translate Logout}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource TextPrimary}"
                    Margin="10"
                    Clicked="OnLogoutClicked"/>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
