<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.ForgotPasswordPage"
             Title="{extensions:Translate RecoverPassword}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Icono o imagen -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="50"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"
                   Padding="0">
                <Label Text="游"
                       FontSize="48"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- T칤tulo -->
            <Label Text="{extensions:Translate ForgotYourPassword}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                   HorizontalOptions="Center"/>

            <!-- Descripci칩n -->
            <Label Text="{extensions:Translate ForgotPasswordDescription}"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Paso 1: Solicitar email -->
            <VerticalStackLayout x:Name="EmailSection" Spacing="15">
                <Label Text="{extensions:Translate EnterYourEmail}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                       FontSize="16"/>

                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="EmailEntry"
                           Placeholder="{extensions:Translate EmailPlaceholder}" 
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Button x:Name="SendCodeButton"
                        Text="{extensions:Translate SendCode}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnSendCodeClicked"/>
            </VerticalStackLayout>

            <!-- Paso 2: Ingresar c칩digo -->
            <VerticalStackLayout x:Name="CodeSection" 
                                 Spacing="15"
                                 IsVisible="False">
                <Label Text="{extensions:Translate EnterVerificationCode}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                       FontSize="16"/>

                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="CodeEntry"
                           Placeholder="{extensions:Translate CodePlaceholder}" 
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           Keyboard="Numeric"
                           MaxLength="6"
                           BackgroundColor="Transparent"/>
                </Frame>

                <HorizontalStackLayout Spacing="5">
                    <Label Text="{extensions:Translate DidntReceiveCode}"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                           FontSize="14"/>
                    <Label x:Name="ResendLabel"
                           Text="{extensions:Translate ResendCode}"
                           TextColor="{StaticResource Primary}"
                           FontSize="14"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnResendCodeTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <Button x:Name="VerifyCodeButton"
                        Text="{extensions:Translate VerifyCode}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnVerifyCodeClicked"/>
            </VerticalStackLayout>

            <!-- Paso 3: Nueva contrase침a -->
            <VerticalStackLayout x:Name="NewPasswordSection" 
                                 Spacing="15"
                                 IsVisible="False">
                <Label Text="{extensions:Translate EnterNewPassword}"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                       FontSize="16"/>

                <!-- Nueva contrase침a con ojito -->
                <Frame x:Name="NewPasswordFrame"
                       BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="NewPasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate NewPasswordPlaceholder}" 
                               PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNewPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                        
                    </Grid>
                </Frame>

                <!-- Confirmar nueva contrase침a con ojito -->
                <Frame x:Name="ConfirmPasswordFrame"
                       BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="ConfirmPasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate ConfirmPasswordPlaceholder}" 
                               PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="ConfirmPasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnConfirmPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Mensaje de error -->
                <Label x:Name="PasswordMatchLabel"
                       Text="{extensions:Translate PasswordsDontMatch}"
                       TextColor="#EF4444"
                       FontSize="12"
                       IsVisible="False"/>

                <Label Text="{extensions:Translate PasswordMinLength}"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                       FontSize="12"/>

                <Button x:Name="ResetPasswordButton"
                        Text="{extensions:Translate ResetPassword}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnResetPasswordClicked"/>
            </VerticalStackLayout>

            <!-- Volver al login -->
            <Label Text="{extensions:Translate BackToLogin}"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackToLoginTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>