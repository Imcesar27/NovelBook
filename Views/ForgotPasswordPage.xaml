<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.ForgotPasswordPage"
             Title="Recuperar Contrase침a"
             BackgroundColor="{StaticResource BackgroundDark}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Icono o imagen -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="50"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"
                   Padding="0">
                <Label Text="游"
                       FontSize="48"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- T칤tulo -->
            <Label Text="쯆lvidaste tu contrase침a?"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   HorizontalOptions="Center"/>

            <!-- Descripci칩n -->
            <Label Text="No te preocupes, te enviaremos un c칩digo de verificaci칩n a tu correo electr칩nico para que puedas restablecer tu contrase침a."
                   FontSize="14"
                   TextColor="{StaticResource TextSecondary}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Paso 1: Solicitar email -->
            <VerticalStackLayout x:Name="EmailSection" Spacing="15">
                <Label Text="Ingresa tu correo electr칩nico:"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="16"/>

                <Frame BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="EmailEntry"
                           Placeholder="correo@ejemplo.com" 
                           PlaceholderColor="{StaticResource TextMuted}"
                           TextColor="{StaticResource TextPrimary}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Button x:Name="SendCodeButton"
                        Text="Enviar c칩digo"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnSendCodeClicked"/>
            </VerticalStackLayout>

            <!-- Paso 2: Ingresar c칩digo -->
            <VerticalStackLayout x:Name="CodeSection" 
                                 Spacing="15"
                                 IsVisible="False">
                <Label Text="Ingresa el c칩digo de 6 d칤gitos enviado a tu correo:"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="16"/>

                <Frame BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="CodeEntry"
                           Placeholder="123456" 
                           PlaceholderColor="{StaticResource TextMuted}"
                           TextColor="{StaticResource TextPrimary}"
                           Keyboard="Numeric"
                           MaxLength="6"
                           BackgroundColor="Transparent"/>
                </Frame>

                <HorizontalStackLayout Spacing="5">
                    <Label Text="쯅o recibiste el c칩digo?"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="14"/>
                    <Label x:Name="ResendLabel"
                           Text="Reenviar"
                           TextColor="{StaticResource Primary}"
                           FontSize="14"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnResendCodeTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <Button x:Name="VerifyCodeButton"
                        Text="Verificar c칩digo"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnVerifyCodeClicked"/>
            </VerticalStackLayout>

            <!-- Paso 3: Nueva contrase침a -->
            <VerticalStackLayout x:Name="NewPasswordSection" 
                                 Spacing="15"
                                 IsVisible="False">
                <Label Text="Ingresa tu nueva contrase침a:"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="16"/>

                <!-- Nueva contrase침a con ojito -->
                <Frame x:Name="NewPasswordFrame"
                       BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="NewPasswordEntry"
                               Grid.Column="0"
                               Placeholder="Nueva contrase침a" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNewPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                        
                    </Grid>
                </Frame>

                <!-- Confirmar nueva contrase침a con ojito -->
                <Frame x:Name="ConfirmPasswordFrame"
                       BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="ConfirmPasswordEntry"
                               Grid.Column="0"
                               Placeholder="Confirmar contrase침a" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="ConfirmPasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnConfirmPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Mensaje de error -->
                <Label x:Name="PasswordMatchLabel"
                       Text="Las contrase침as no coinciden"
                       TextColor="#EF4444"
                       FontSize="12"
                       IsVisible="False"/>

                <Label Text="La contrase침a debe tener al menos 6 caracteres"
                       TextColor="{StaticResource TextSecondary}"
                       FontSize="12"/>

                <Button x:Name="ResetPasswordButton"
                        Text="Restablecer contrase침a"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnResetPasswordClicked"/>
            </VerticalStackLayout>

            <!-- Volver al login -->
            <Label Text="Volver al inicio de sesi칩n"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackToLoginTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>