<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.Dialogs.ChangePasswordDialog"
             Title="Cambiar Contrase침a"
             BackgroundColor="#80000000">

    <Grid>
        <!-- Fondo oscuro semitransparente -->
        <BoxView BackgroundColor="#80000000">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Contenedor del di치logo -->
        <Frame BackgroundColor="{StaticResource BackgroundMedium}"
               CornerRadius="20"
               Padding="20"
               Margin="20"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="350">

            <VerticalStackLayout Spacing="15">
                <!-- T칤tulo -->
                <Label Text="Cambiar Contrase침a"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"
                       HorizontalOptions="Center"/>

                <!-- Mensaje de error -->
                <Label x:Name="ErrorLabel"
                       TextColor="#EF4444"
                       FontSize="12"
                       IsVisible="False"
                       HorizontalOptions="Center"/>

                <!-- Contrase침a actual con ojito -->
                <Frame BackgroundColor="{StaticResource BackgroundDark}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="CurrentPasswordEntry"
                               Grid.Column="0"
                               Placeholder="Contrase침a actual" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCurrentPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Nueva contrase침a con ojito -->
                <Frame x:Name="NewPasswordFrame"
                       BackgroundColor="{StaticResource BackgroundDark}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="NewPasswordEntry"
                               Grid.Column="0"
                               Placeholder="Nueva contrase침a" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="NewPasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNewPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>

                    </Grid>
                </Frame>

                <!-- Confirmar nueva contrase침a con ojito -->
                <Frame x:Name="ConfirmPasswordFrame"
                       BackgroundColor="{StaticResource BackgroundDark}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="ConfirmPasswordEntry"
                               Grid.Column="0"
                               Placeholder="Confirmar nueva contrase침a" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="ConfirmPasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnConfirmPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Mensaje de validaci칩n -->
                <Label x:Name="PasswordMatchLabel"
                       Text="Las contrase침as no coinciden"
                       TextColor="#EF4444"
                       FontSize="12"
                       IsVisible="False"/>

                <Label Text="La contrase침a debe tener al menos 6 caracteres"
                       TextColor="{StaticResource TextSecondary}"
                       FontSize="12"/>

                <!-- Botones -->
                <Grid ColumnSpacing="10" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Text="Cancelar"
                            BackgroundColor="{StaticResource BackgroundDark}"
                            TextColor="{StaticResource TextPrimary}"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCancelClicked"/>

                    <Button Grid.Column="1"
                            x:Name="ConfirmButton"
                            Text="Cambiar"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource TextPrimary}"
                            CornerRadius="10"
                            HeightRequest="45"
                            FontAttributes="Bold"
                            Clicked="OnConfirmClicked"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>