<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.NovelDetailPage"
             Title="{extensions:Translate NovelDetails}"
             BackgroundColor="{StaticResource BackgroundDark}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <!-- Header con imagen de fondo -->
            <Grid HeightRequest="300">
                <!-- Imagen de fondo -->
                <Image Source="{Binding CoverImageSource}"
                       Aspect="AspectFill"
                       Opacity="0.3"/>

                <!-- Gradiente oscuro -->
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="{StaticResource BackgroundDark}" Offset="1"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>

                <!-- Contenido sobre la imagen -->
                <Grid Padding="20" VerticalOptions="End">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Portada del libro -->
                    <Frame Grid.Column="0"
                           CornerRadius="10"
                           Padding="0"
                           HasShadow="True"
                           HeightRequest="180"
                           WidthRequest="120">
                        <Image Source="{Binding CoverImageSource}"
                               Aspect="AspectFill"/>
                    </Frame>

                    <!-- Informacion basica -->
                    <VerticalStackLayout Grid.Column="1" 
                                       Padding="15,0,0,0"
                                       Spacing="8"
                                       VerticalOptions="End">
                        <Label Text="{Binding Title}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               LineBreakMode="WordWrap"/>

                        <Label Text="{Binding Author}"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Rating -->
                            <Label Grid.Column="0" 
                                   TextColor="{StaticResource Primary}"
                                   Margin="0,0,15,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="â­ " />
                                        <Span Text="{Binding Rating}" FontAttributes="Bold"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <!-- CapÃ­tulos -->
                            <Label Grid.Column="1"
                                   TextColor="{StaticResource TextSecondary}"
                                   Margin="0,0,15,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ðŸ“– " />
                                        <Span Text="{Binding ChapterCount}" />
                                        <Span Text=" " />
                                        <Span Text="{extensions:Translate Chapters}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <!-- BotÃ³n de reseÃ±as -->
                            <Button Grid.Column="3"
                                    x:Name="ReviewsButton"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Primary}"
                                    FontSize="12"
                                    Padding="10,5"
                                    Clicked="OnReviewsClicked">
                                <Button.Text>
                                    <MultiBinding StringFormat="Ver reseÃ±as ({0})">
                                        <Binding Path="ReviewCount" FallbackValue="0"/>
                                    </MultiBinding>
                                </Button.Text>
                            </Button>

                        </Grid>

                        <Frame BackgroundColor="{Binding StatusColor}"
                               CornerRadius="10"
                               Padding="10,5"
                               HorizontalOptions="Start">
                            <Label Text="{Binding Status}"
                                   TextColor="White"
                                   FontSize="12"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </VerticalStackLayout>
                </Grid>
            </Grid>

            <!-- Botones de accion principales -->
            <Grid Padding="20,15" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="ReadButton"
                        Text="{extensions:Translate StartReading}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="50"
                        Clicked="OnReadClicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,2" 
                                Radius="4" 
                                Opacity="0.2"/>
                    </Button.Shadow>
                </Button>

                <Button Grid.Column="1"
                        x:Name="AddToLibraryButton"
                        Text="{extensions:Translate AddToLibrary}"
                        BackgroundColor="{StaticResource BackgroundMedium}"
                        TextColor="{StaticResource TextPrimary}"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="50"
                        Clicked="OnAddToLibraryClicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,2" 
                                Radius="4" 
                                Opacity="0.1"/>
                    </Button.Shadow>
                </Button>
            </Grid>

            <!-- Tabs de informacion -->
            <Grid BackgroundColor="{StaticResource BackgroundMedium}" 
                  HeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="SynopsisTab"
                        Grid.Column="0"
                        Text="{extensions:Translate Synopsis}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        Clicked="OnSynopsisTabClicked"/>

                <Button x:Name="ChaptersTab"
                        Grid.Column="1"
                        Text="{extensions:Translate Chapters}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextSecondary}"
                        Clicked="OnChaptersTabClicked"/>

                <Button x:Name="DetailsTab"
                        Grid.Column="2"
                        Text="{extensions:Translate Details}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextSecondary}"
                        Clicked="OnDetailsTabClicked"/>
            </Grid>

            <!-- Contenido de los tabs -->
            <Frame BackgroundColor="{StaticResource BackgroundDark}"
                   Padding="20"
                   CornerRadius="0">
                <Grid>
                    <!-- Sinopsis (visible por defecto) -->
                    <VerticalStackLayout x:Name="SynopsisContent" 
                                       Spacing="15">
                        <Label Text="{extensions:Translate Synopsis}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"/>

                        <Label Text="{Binding Synopsis}"
                               TextColor="{StaticResource TextSecondary}"
                               LineHeight="1.5"
                               LineBreakMode="WordWrap"/>

                        <!-- Tags/Generos -->
                        <Label Text="{extensions:Translate Genres}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               Margin="0,10,0,0"/>

                        <FlexLayout x:Name="GenresLayout"
                                  Wrap="Wrap"
                                  Direction="Row"
                                  JustifyContent="Start"
                                  AlignItems="Start">
                            <!-- Los generos se agregaran dinamicamente -->
                        </FlexLayout>
                    </VerticalStackLayout>

                    <!-- Capitulos (oculto inicialmente) -->
                    <VerticalStackLayout x:Name="ChaptersContent" 
                                       IsVisible="False"
                                       Spacing="10">
                        <!-- Barra de busqueda y filtros -->
                        <SearchBar Placeholder="{extensions:Translate SearchChapter}"
                                   PlaceholderColor="{StaticResource TextMuted}"
                                   TextColor="{StaticResource TextPrimary}"
                                   BackgroundColor="{StaticResource BackgroundMedium}"
                                   TextChanged="OnChapterSearchTextChanged"/>

                        <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
                            <Button Text="Todos"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="15"
                                    Padding="15,5"
                                    FontSize="12"
                                    Clicked="OnChapterFilterClicked"/>
                            <Button Text="Sin leer"
                                    BackgroundColor="{StaticResource BackgroundMedium}"
                                    TextColor="{StaticResource TextSecondary}"
                                    CornerRadius="15"
                                    Padding="15,5"
                                    FontSize="12"
                                    Clicked="OnChapterFilterClicked"/>
                            <Button Text="â†“â†‘"
                                    BackgroundColor="{StaticResource BackgroundMedium}"
                                    TextColor="{StaticResource TextSecondary}"
                                    CornerRadius="15"
                                    Padding="10,5"
                                    FontSize="12"
                                    Clicked="OnChapterFilterClicked"/>
                        </HorizontalStackLayout>

                        <!-- Lista de capÃ­tulos -->
                        <CollectionView x:Name="ChaptersList"
                                        HeightRequest="400">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                                           CornerRadius="10"
                                           Padding="15,10"
                                           Margin="0,2">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnChapterTapped"/>
                                        </Frame.GestureRecognizers>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="{Binding Title}"
                                                       TextColor="{Binding TitleColor}"
                                                       FontSize="14"/>
                                                <Label Text="{Binding Date}"
                                                       TextColor="{StaticResource TextMuted}"
                                                       FontSize="11"/>
                                            </VerticalStackLayout>

                                            <Label Grid.Column="1"
                                                   Text="â†’"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="20"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Detalles (oculto inicialmente) -->
                    <Grid x:Name="DetailsContent" 
                          IsVisible="False"
                          RowSpacing="10"
                          ColumnSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{extensions:Translate Author}"
                               TextColor="{StaticResource TextSecondary}"
                               FontAttributes="Bold"/>
                        <!--Boton autor-->
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Author}"
                               TextColor="{StaticResource Primary}"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAuthorTapped"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{extensions:Translate Status}"
                               TextColor="{StaticResource TextSecondary}"
                               FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Status}"
                               TextColor="{StaticResource TextPrimary}"/>

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="{extensions:Translate Chapters}"
                               TextColor="{StaticResource TextSecondary}"
                               FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="{Binding ChapterCount}"
                               TextColor="{StaticResource TextPrimary}"/>

                        <Label Grid.Row="3" Grid.Column="0"
                               Text="{extensions:Translate LastUpdate}"
                               TextColor="{StaticResource TextSecondary}"
                               FontAttributes="Bold"/>
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="{Binding LastUpdated}"
                               TextColor="{StaticResource TextPrimary}"/>

                        <Label Grid.Row="4" Grid.Column="0"
                               Text="{extensions:Translate Views}"
                               TextColor="{StaticResource TextSecondary}"
                               FontAttributes="Bold"/>
                        <Label Grid.Row="4" Grid.Column="1"
                               Text="{Binding Views}"
                               TextColor="{StaticResource TextPrimary}"/>
                    </Grid>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>