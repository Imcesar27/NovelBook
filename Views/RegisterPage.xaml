<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.RegisterPage"
             Title="{extensions:Translate RegisterTitle}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand">

            <!-- Logo y t칤tulo -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">

                <!-- 칈cono del libro -->
                <Image Source="logo_cuatro.png" 
                   HeightRequest="400" 
                   WidthRequest="400"
                   HorizontalOptions="Center"/>

                <!-- Nombre de la app -->
                <Label Text="NOVELBOOK" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center"/>

                <!-- Subt칤tulo -->
                <Label Text="{extensions:Translate YourLightNovelWorld}" 
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- T칤tulo de la secci칩n -->
            <Label Text="{extensions:Translate FillAllFieldsLabel}" 
                   FontSize="16"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                   HorizontalOptions="Start"
                   Margin="0,20,0,0"/>

            <!-- Campos de registro -->
            <VerticalStackLayout Spacing="15">
                <!-- Campo de nombre -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark={StaticResource BackgroundDark}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="NameEntry"
                           Placeholder="{extensions:Translate Name}" 
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           BackgroundColor="Transparent"/>
                </Frame>

                <!-- Campo de correo -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark={StaticResource BackgroundDark}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="EmailEntry"
                           Placeholder="{extensions:Translate Email}" 
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </Frame>

                <!-- Campo de contrase침a con ojito -->
                <Frame x:Name="PasswordFrame"
                       BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark={StaticResource BackgroundDark}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="PasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate Password}" 
                               PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Campo de confirmar contrase침a con ojito -->
                <Frame x:Name="ConfirmPasswordFrame"
                       BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark={StaticResource BackgroundDark}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="ConfirmPasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate ConfirmPassword}" 
                               PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               Margin="15,10"
                               TextChanged="OnPasswordChanged"/>

                        <Label Grid.Column="1"
                               x:Name="ConfirmPasswordToggle"
                               Text="游뗻"
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnConfirmPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Mensaje de error para contrase침as que no coinciden -->
                <Label x:Name="PasswordMatchLabel"
                       Text="{extensions:Translate PasswordsDoNotMatch}"
                       TextColor="#EF4444"
                       FontSize="12"
                       IsVisible="False"
                       Margin="5,0,0,0"/>

                <!-- Indicador de requisitos de contrase침a -->
                <Label Text="{extensions:Translate PasswordRequirement}"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                       FontSize="12"
                       Margin="5,0,0,0"/>

                <!-- Bot칩n de crear cuenta -->
                <Button Text="{extensions:Translate CreateAccount}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Margin="0,10,0,0"
                        Clicked="OnRegisterClicked"/>

                <!-- L칤nea separadora -->
                <BoxView BackgroundColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                         HeightRequest="1"
                         Margin="0,20,0,10"
                         Opacity="0.3"/>

                <!-- Enlaces para volver al login -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="{extensions:Translate AlreadyHaveAccount}" 
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"/>
                    <Label Text="{extensions:Translate Login}" 
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>