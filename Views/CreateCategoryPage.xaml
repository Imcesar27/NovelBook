<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.CreateCategoryPage"
             Title="{extensions:Translate CreateCategory}"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundDarkLight}, Dark=#121212}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{extensions:Translate Cancel}"
                     Clicked="OnCancelClicked"
                     Order="Primary" />
        <ToolbarItem Text="{extensions:Translate Save}"
                     Clicked="OnSaveClicked"
                     Order="Primary" />
    </ContentPage.ToolbarItems>

    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <!-- T칤tulo de la p치gina -->
            <Label x:Name="TitleLabel"
                   Text="{extensions:Translate CreateCategory}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                   HorizontalOptions="Center" />

            <!-- Nombre de la categor칤a -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                   CornerRadius="15"
                   Padding="0"
                   HasShadow="False">
                <StackLayout Padding="15">
                    <Label Text="{extensions:Translate CategoryName}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           Margin="0,0,0,5" />
                    <Entry x:Name="NameEntry"
                           Placeholder="{extensions:Translate EnterCategoryName}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark=#808080}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark=#2A2A2A}"
                           MaxLength="100" />
                </StackLayout>
            </Frame>

            <!-- Descripci칩n -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                   CornerRadius="15"
                   Padding="0"
                   HasShadow="False">
                <StackLayout Padding="15">
                    <Label Text="{extensions:Translate CategoryDescription}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           Margin="0,0,0,5" />
                    <Editor x:Name="DescriptionEditor"
                            Placeholder="{extensions:Translate DescribeCategoryPurpose}"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark=#808080}"
                            TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark=#2A2A2A}"
                            HeightRequest="100"
                            MaxLength="500" />
                </StackLayout>
            </Frame>

            <!-- Selecci칩n de 칤cono -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark=#2A2A2A}"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="False">
                <StackLayout>
                    <Label Text="{extensions:Translate ChooseIcon}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           Margin="0,0,0,10" />

                    <FlexLayout x:Name="IconsLayout"
                               Wrap="Wrap"
                               JustifyContent="Start"
                               AlignItems="Start"
                               Direction="Row">
                        <!-- Los 칤conos se agregar치n program치ticamente -->
                    </FlexLayout>
                </StackLayout>
            </Frame>

            <!-- Selecci칩n de color -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark=#2A2A2A}"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="False">
                <StackLayout>
                    <Label Text="{extensions:Translate ChooseColor}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           Margin="0,0,0,10" />

                    <FlexLayout x:Name="ColorsLayout"
                               Wrap="Wrap"
                               JustifyContent="Start"
                               AlignItems="Start"
                               Direction="Row">
                        <!-- Los colores se agregar치n program치ticamente -->
                    </FlexLayout>
                </StackLayout>
            </Frame>

            <!-- Vista previa -->
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="False">
                <StackLayout>
                    <Label Text="{extensions:Translate Preview}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                           Margin="0,0,0,15" />

                    <Frame x:Name="PreviewFrame"
                           BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight}, Dark=#2A2A2A}"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <Frame x:Name="PreviewIconFrame"
                                   Grid.Column="0"
                                   BackgroundColor="#2196F3"
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Padding="0"
                                   HasShadow="False">
                                <Label x:Name="PreviewIconLabel"
                                       Text="游늬"
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Frame>

                            <StackLayout Grid.Column="1"
                                         Margin="15,0,0,0"
                                         VerticalOptions="Center">
                                <Label x:Name="PreviewNameLabel"
                                       Text="{extensions:Translate NewCategory}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}" />
                                <Label x:Name="PreviewDescriptionLabel"
                                       Text="{extensions:Translate NoDescription}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark=#B0B0B0}" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Botones de acci칩n -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Bot칩n Cancelar -->
                <Button Grid.Column="0"
                        Text="{extensions:Translate Cancel}"
                        BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark=#404040}"
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                        CornerRadius="20"
                        HeightRequest="45"
                        Margin="0,0,5,0"
                        Clicked="OnCancelClicked" />

                <!-- Bot칩n Guardar/Crear -->
                <Button Grid.Column="1"
                        x:Name="SaveButton"
                        Text="{extensions:Translate CreateCategoryButton}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="20"
                        HeightRequest="45"
                        Margin="5,0,0,0"
                        Clicked="OnSaveClicked" />
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>