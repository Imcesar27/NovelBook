<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.DownloadQueuePage"
             Title="Cola de Descargas"
             BackgroundColor="{StaticResource BackgroundDark}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- InformaciÃ³n de estado -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource BackgroundMedium}"
               CornerRadius="10"
               Margin="10"
               Padding="15">
            <VerticalStackLayout Spacing="10">
                <Label Text="Estado de descargas"
                       TextColor="{StaticResource TextSecondary}"
                       FontSize="14"/>

                <Label x:Name="QueueStatusLabel"
                       Text="No hay descargas en progreso"
                       TextColor="{StaticResource TextPrimary}"
                       FontSize="16"
                       FontAttributes="Bold"/>

                <ProgressBar x:Name="OverallProgress"
                             Progress="0"
                             ProgressColor="{StaticResource Primary}"
                             BackgroundColor="{StaticResource BackgroundLight}"
                             HeightRequest="6"
                             IsVisible="False"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista de descargas pendientes -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout>
                <!-- Estado vacÃ­o -->
                <VerticalStackLayout x:Name="EmptyState"
                                     VerticalOptions="CenterAndExpand"
                                     HorizontalOptions="Center"
                                     Spacing="10"
                                     Padding="20">
                    <Label Text="ðŸ“‹"
                           FontSize="60"
                           HorizontalOptions="Center"/>
                    <Label Text="Cola vacÃ­a"
                           TextColor="{StaticResource TextSecondary}"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                    <Label Text="Las descargas aparecerÃ¡n aquÃ­ cuando inicies alguna"
                           TextColor="{StaticResource TextMuted}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <!-- Lista de descargas (oculta por defecto) -->
                <CollectionView x:Name="QueueList"
                                IsVisible="False">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                                   CornerRadius="10"
                                   Padding="15"
                                   Margin="0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- TÃ­tulo de la novela -->
                                    <Label Grid.Row="0"
                                           Text="{Binding NovelTitle}"
                                           TextColor="{StaticResource TextPrimary}"
                                           FontSize="16"
                                           FontAttributes="Bold"/>

                                    <!-- InformaciÃ³n del capÃ­tulo -->
                                    <HorizontalStackLayout Grid.Row="1"
                                                           Spacing="10"
                                                           Margin="0,5">
                                        <Label Text="{Binding ChapterInfo}"
                                               TextColor="{StaticResource TextSecondary}"
                                               FontSize="14"/>
                                        <Label Text="â€¢"
                                               TextColor="{StaticResource TextMuted}"/>
                                        <Label Text="{Binding Status}"
                                               TextColor="{Binding StatusColor}"
                                               FontSize="14"/>
                                    </HorizontalStackLayout>

                                    <!-- Barra de progreso -->
                                    <ProgressBar Grid.Row="2"
                                                 Progress="{Binding Progress}"
                                                 ProgressColor="{StaticResource Primary}"
                                                 BackgroundColor="{StaticResource BackgroundLight}"
                                                 HeightRequest="4"
                                                 Margin="0,5,0,0"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>