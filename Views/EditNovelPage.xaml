<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.EditNovelPage"
             Title="Editar Novela"
             BackgroundColor="{StaticResource BackgroundDark}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- InformaciÃ³n bÃ¡sica -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="InformaciÃ³n BÃ¡sica"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <!-- TÃ­tulo -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="TÃ­tulo de la Novela *"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Entry x:Name="TitleEntry"
                               Placeholder="Ingrese el tÃ­tulo"
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               BackgroundColor="{StaticResource BackgroundLight}"/>
                    </VerticalStackLayout>

                    <!-- Autor -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Autor *"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Entry x:Name="AuthorEntry"
                               Placeholder="Nombre del autor"
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               BackgroundColor="{StaticResource BackgroundLight}"/>
                    </VerticalStackLayout>

                    <!-- Estado -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Estado"
                               TextColor="{StaticResource TextPrimary}"/>
                        <Picker x:Name="StatusPicker"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}">
                            <Picker.Items>
                                <x:String>En curso</x:String>
                                <x:String>Completado</x:String>
                                <x:String>En pausa</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- GÃ©neros -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="GÃ©neros"
                               TextColor="{StaticResource TextPrimary}"/>
                        <ScrollView Orientation="Horizontal" HeightRequest="50">
                            <HorizontalStackLayout x:Name="GenresLayout" Spacing="10" Padding="0,0,0,5">
                                <!-- Los gÃ©neros se cargarÃ¡n dinÃ¡micamente -->
                            </HorizontalStackLayout>
                        </ScrollView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Imagen de portada -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Imagen de Portada"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Preview de imagen -->
                        <Frame Grid.Column="0"
                               BackgroundColor="{StaticResource BackgroundLight}"
                               CornerRadius="10"
                               Padding="0"
                               HeightRequest="160"
                               WidthRequest="120">
                            <Grid>
                                <Image x:Name="CoverImagePreview"
                                       Aspect="AspectFill"/>
                                <Label Text="ðŸ“·"
                                       FontSize="40"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="{StaticResource TextMuted}"
                                       x:Name="NoImageLabel"
                                       IsVisible="False"/>
                            </Grid>
                        </Frame>

                        <!-- Botones de imagen -->
                        <VerticalStackLayout Grid.Column="1"
                                           Padding="15,0,0,0"
                                           VerticalOptions="Center"
                                           Spacing="10">
                            <Button Text="Cambiar imagen"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="OnSelectImageClicked"/>
                            <Label Text="JPG, PNG â€¢ Max 2MB"
                                   TextColor="{StaticResource TextMuted}"
                                   FontSize="12"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Sinopsis -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Sinopsis *"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Editor x:Name="SynopsisEditor"
                            Placeholder="Escribe la sinopsis de la novela..."
                            PlaceholderColor="{StaticResource TextMuted}"
                            TextColor="{StaticResource TextPrimary}"
                            BackgroundColor="{StaticResource BackgroundLight}"
                            HeightRequest="200"
                            AutoSize="TextChanges"
                            TextChanged="OnSynopsisTextChanged"/>

                    <Label x:Name="CharCountLabel"
                           Text="0 / 2000 caracteres"
                           TextColor="{StaticResource TextMuted}"
                           FontSize="12"
                           HorizontalOptions="End"/>
                </VerticalStackLayout>
            </Frame>

            <!-- GestiÃ³n de capÃ­tulos -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout>
                        <Label Text="CapÃ­tulos"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="StartAndExpand"/>

                        <Label x:Name="ChapterCountLabel"
                               Text="(0 capÃ­tulos)"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Button Text="+ Agregar CapÃ­tulo"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnAddChapterClicked"/>

                    <!-- Lista de capÃ­tulos -->
                    <CollectionView x:Name="ChaptersList"
                                    HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{StaticResource BackgroundLight}"
                                       CornerRadius="5"
                                       Padding="10"
                                       Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding Title}"
                                                   TextColor="{StaticResource TextPrimary}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Info}"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   FontSize="12"/>
                                        </VerticalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" 
                                                             Spacing="5">
                                            <Button Text="âœï¸"
                                                    BackgroundColor="{StaticResource Primary}"
                                                    TextColor="White"
                                                    WidthRequest="35"
                                                    HeightRequest="35"
                                                    CornerRadius="17"
                                                    FontSize="16"
                                                    Clicked="OnEditChapterClicked"
                                                    CommandParameter="{Binding Id}"/>

                                            <Button Text="ðŸ—‘ï¸"
                                                    BackgroundColor="{StaticResource Error}"
                                                    TextColor="White"
                                                    WidthRequest="35"
                                                    HeightRequest="35"
                                                    CornerRadius="17"
                                                    FontSize="16"
                                                    Clicked="OnDeleteChapterClicked"
                                                    CommandParameter="{Binding Id}"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Botones de acciÃ³n -->
            <Grid ColumnSpacing="10" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="Cancelar"
                        BackgroundColor="{StaticResource BackgroundMedium}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnCancelClicked"/>

                <Button Grid.Column="1"
                        Text="Guardar Cambios"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnSaveChangesClicked"/>
            </Grid>

            <!-- Indicador de carga -->
            <ActivityIndicator x:Name="LoadingIndicator"
                              Color="{StaticResource Primary}"
                              IsVisible="False"
                              Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>