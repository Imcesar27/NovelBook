                                        TextColor="{StaticResource TextSecondary}"
                                        CornerRadius="15"
                                        Padding="15,5"
                                        Clicked="OnGenreClicked"/>
                                <Button Text="Drama" 
                                        BackgroundColor="{StaticResource BackgroundLight}"
                                        TextColor="{StaticResource TextSecondary}"
                                        CornerRadius="15"
                                        Padding="15,5"
                                        Clicked="OnGenreClicked"/>
                                <Button Text="Comedia" 
                                        BackgroundColor="{StaticResource BackgroundLight}"
                                        TextColor="{StaticResource TextSecondary}"
                                        CornerRadius="15"
                                        Padding="15,5"
                                        Clicked="OnGenreClicked"/>
                            </HorizontalStackLayout>
                        </ScrollView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Imagen de portada -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Imagen de Portada"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Preview de imagen -->
                        <Frame Grid.Column="0"
                               BackgroundColor="{StaticResource BackgroundLight}"
                               CornerRadius="10"
                               Padding="0"
                               HeightRequest="160"
                               WidthRequest="120">
                            <Grid>
                                <Label Text="ðŸ“·"
                                       FontSize="40"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="{StaticResource TextMuted}"
                                       x:Name="NoImageLabel"/>
                                <Image x:Name="CoverImagePreview"
                                       Aspect="AspectFill"
                                       IsVisible="False"/>
                            </Grid>
                        </Frame>

                        <!-- Botones de imagen -->
                        <VerticalStackLayout Grid.Column="1"
                                           Padding="15,0,0,0"
                                           VerticalOptions="Center"
                                           Spacing="10">
                            <Button Text="Seleccionar imagen"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Clicked="OnSelectImageClicked"/>
                            <Label Text="JPG, PNG â€¢ Max 2MB"
                                   TextColor="{StaticResource TextMuted}"
                                   FontSize="12"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Sinopsis -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Sinopsis *"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <!-- Barra de herramientas -->
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="B"
                                FontAttributes="Bold"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnBoldClicked"/>
                        <Button Text="I"
                                FontAttributes="Italic"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnItalicClicked"/>
                        <Button Text="UÌ²"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnUnderlineClicked"/>
                    </HorizontalStackLayout>

                    <Editor x:Name="SynopsisEditor"
                            Placeholder="Escribe la sinopsis de la novela..."
                            PlaceholderColor="{StaticResource TextMuted}"
                            TextColor="{StaticResource TextPrimary}"
                            BackgroundColor="{StaticResource BackgroundLight}"
                            HeightRequest="200"
                            AutoSize="TextChanges"/>

                    <Label x:Name="CharCountLabel"
                           Text="0 / 2000 caracteres"
                           TextColor="{StaticResource TextMuted}"
                           FontSize="12"
                           HorizontalOptions="End"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Primer capÃ­tulo -->
            <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                   CornerRadius="10"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Primer CapÃ­tulo (Opcional)"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Entry x:Name="ChapterTitleEntry"
                           Placeholder="TÃ­tulo del capÃ­tulo"
                           PlaceholderColor="{StaticResource TextMuted}"
                           TextColor="{StaticResource TextPrimary}"
                           BackgroundColor="{StaticResource BackgroundLight}"/>

                    <!-- Barra de herramientas para capÃ­tulo -->
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="B"
                                FontAttributes="Bold"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnChapterBoldClicked"/>
                        <Button Text="I"
                                FontAttributes="Italic"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnChapterItalicClicked"/>
                        <Button Text="UÌ²"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                Clicked="OnChapterUnderlineClicked"/>
                        <BoxView WidthRequest="1" 
                                 BackgroundColor="{StaticResource TextMuted}" 
                                 Margin="10,5"/>
                        <Button Text="Â¶"
                                BackgroundColor="{StaticResource BackgroundLight}"
                                TextColor="{StaticResource TextPrimary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="5"
                                ToolTipProperties.Text="Nuevo pÃ¡rrafo"
                                Clicked="OnParagraphClicked"/>
                    </HorizontalStackLayout>

                    <Editor x:Name="ChapterContentEditor"
                            Placeholder="Escribe el contenido del capÃ­tulo..."
                            PlaceholderColor="{StaticResource TextMuted}"
                            TextColor="{StaticResource TextPrimary}"
                            BackgroundColor="{StaticResource BackgroundLight}"
                            HeightRequest="300"
                            AutoSize="TextChanges"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Botones de acciÃ³n -->
            <Grid ColumnSpacing="10" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="Cancelar"
                        BackgroundColor="{StaticResource BackgroundMedium}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnCancelClicked"/>

                <Button Grid.Column="1"
                        Text="Crear Novela"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnCreateNovelClicked"/>
            </Grid>

            <ActivityIndicator x:Name="LoadingIndicator"
                              Color="{StaticResource Primary}"
                              IsVisible="False"
                              Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>