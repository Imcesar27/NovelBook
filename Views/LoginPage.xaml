<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.LoginPage"
             Title="{extensions:Translate Login}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand">

            <!-- Logo y t铆tulo -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- cono del libro -->
                <Image Source="logo_uno.png" 
                       HeightRequest="400" 
                       WidthRequest="400"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Secci贸n de inicio de sesi贸n -->
            <VerticalStackLayout Spacing="15" Margin="0,10,0,0">
                <Label Text="{extensions:Translate Login}" 
                       FontSize="20"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                       HorizontalOptions="Center"/>

                <!-- Campo de correo -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="EmailEntry"
                           Placeholder="{extensions:Translate Email}" 
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </Frame>

                <!-- Campo de contrase帽a con ojito -->
                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="PasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate Password}" 
                               PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               ReturnType="Go"
                               Completed="OnPasswordEntryCompleted"
                               Margin="15,10"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text=""
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Link de olvid茅 mi contrase帽a -->
                <Label Text="{extensions:Translate ForgotPassword}"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="End"
                       FontSize="14"
                       Margin="0,-5,5,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Bot贸n de iniciar sesi贸n -->
                <Button x:Name="LoginButton"
                        Text="{extensions:Translate Login}"
                        BackgroundColor="{StaticResource Primary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnLoginClicked"/>

                <!-- Texto de inicio con redes sociales -->
                <Label Text="{extensions:Translate LoginWithSocial}"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10"/>

                <!-- Botones de redes sociales -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <!-- Bot贸n de Facebook -->
                    <Frame BackgroundColor="#1877F2" 
                           CornerRadius="25"
                           WidthRequest="50"
                           HeightRequest="50"
                           Padding="0"
                           HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFacebookLoginTapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="F" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    </Frame>

                    <!-- Bot贸n de Google -->
                    <Frame BackgroundColor="#DB4437" 
                           CornerRadius="25"
                           WidthRequest="50"
                           HeightRequest="50"
                           Padding="0"
                           HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoogleLoginTapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="G" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>

                    <!-- NUEVO: Bot贸n de GitHub -->
                    <Frame BackgroundColor="#24292E"
                           CornerRadius="10"
                           Padding="0"
                           HeightRequest="50"
                           Margin="0,5">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGitHubLoginTapped"/>
                        </Frame.GestureRecognizers>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="&#xf09b;"
                                   FontFamily="FontAwesome"
                                   FontSize="24"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="{extensions:Translate ContinueWithGitHub}"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"/>
                        </Grid>
                    </Frame>

                </HorizontalStackLayout>

                <!-- Link para registro e invitado -->
                <HorizontalStackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                    <Label Text="{extensions:Translate NoAccount}"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"/>
                    <Label Text="{extensions:Translate Register}" 
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="   " />
                    <Label Text="{extensions:Translate Guest}" 
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGuestTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>