<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.LoginPage"
             Title="{extensions:Translate Login}"
             BackgroundColor="{StaticResource BackgroundDark}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand">

            <!-- Logo y t铆tulo -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- cono del libro -->
                <Image Source="logo_uno.png" 
                       HeightRequest="400" 
                       WidthRequest="400"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Secci贸n de inicio de sesi贸n -->
            <VerticalStackLayout Spacing="15" Margin="0,10,0,0">
                <Label Text="{extensions:Translate Login}" 
                       FontSize="20"
                       TextColor="{StaticResource TextPrimary}"
                       HorizontalOptions="Center"/>

                <!-- Campo de correo -->
                <Frame BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="15,10">
                    <Entry x:Name="EmailEntry"
                           Placeholder="{extensions:Translate Email}" 
                           PlaceholderColor="{StaticResource TextMuted}"
                           TextColor="{StaticResource TextPrimary}"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </Frame>

                <!-- Campo de contrase帽a con ojito -->
                <Frame BackgroundColor="{StaticResource BackgroundMedium}" 
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry x:Name="PasswordEntry"
                               Grid.Column="0"
                               Placeholder="{extensions:Translate Password}" 
                               PlaceholderColor="{StaticResource TextMuted}"
                               TextColor="{StaticResource TextPrimary}"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               ReturnType="Go"
                               Completed="OnPasswordEntryCompleted"
                               Margin="15,10"/>

                        <Label Grid.Column="1"
                               x:Name="PasswordToggle"
                               Text=""
                               FontSize="20"
                               VerticalOptions="Center"
                               Margin="0,0,15,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPasswordToggleClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <!-- Link de olvid茅 mi contrase帽a -->
                <Label Text="{extensions:Translate ForgotPassword}"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="End"
                       FontSize="14"
                       Margin="0,-5,5,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Bot贸n de iniciar sesi贸n -->
                <Button x:Name="LoginButton"
                        Text="{extensions:Translate Login}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource TextPrimary}"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnLoginClicked"/>

                <!-- Texto de inicio con redes sociales -->
                <Label Text="{extensions:Translate LoginWithSocial}"
                       TextColor="{StaticResource TextSecondary}"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10"/>

                <!-- Botones de redes sociales -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <!-- Bot贸n de Facebook -->
                    <Frame BackgroundColor="#1877F2" 
                           CornerRadius="25"
                           WidthRequest="50"
                           HeightRequest="50"
                           Padding="0"
                           HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFacebookLoginTapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="f" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    </Frame>

                    <!-- Bot贸n de Google -->
                    <Frame BackgroundColor="#DB4437" 
                           CornerRadius="25"
                           WidthRequest="50"
                           HeightRequest="50"
                           Padding="0"
                           HorizontalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoogleLoginTapped"/>
                        </Frame.GestureRecognizers>
                        <Label Text="G" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Link para registro e invitado -->
                <HorizontalStackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                    <Label Text="{extensions:Translate NoAccount}"
                           TextColor="{StaticResource TextSecondary}"/>
                    <Label Text="{extensions:Translate Register}" 
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="   " />
                    <Label Text="{extensions:Translate Guest}" 
                           TextColor="{StaticResource TextSecondary}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGuestTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>