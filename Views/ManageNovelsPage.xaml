<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.ManageNovelsPage"
             Title="{extensions:Translate ManageNovels}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       <!-- Header personalizado -->
        <Grid Grid.Row="0"
              BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
              Padding="10"
              HeightRequest="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                    WidthRequest="48"
                    HeightRequest="48"
                    Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1"
                   Text="{extensions:Translate ManageNovels}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Barra de bÃºsqueda y estadÃ­sticas -->
        <Frame Grid.Row="0"
               BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
               CornerRadius="10"
               Margin="10"
               Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- EstadÃ­sticas -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila de estadÃ­sticas -->
                    <HorizontalStackLayout Grid.Row="0" 
                         Spacing="20" 
                         HorizontalOptions="Center"
                         Margin="0,0,0,5">
                        <Label TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{extensions:Translate Total}" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"/>
                                    <Span Text="0" FontAttributes="Bold" x:Name="TotalNovelsLabel"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{extensions:Translate Active}" TextColor="{StaticResource Success}"/>
                                    <Span Text="0" FontAttributes="Bold" x:Name="ActiveNovelsLabel" TextColor="{StaticResource Success}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </HorizontalStackLayout>

                    <!-- Segunda fila de estadÃ­sticas -->
                    <HorizontalStackLayout Grid.Row="1" 
                         Spacing="20" 
                         HorizontalOptions="Center"
                         Margin="0,0,0,10">
                        <Label TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{extensions:Translate Completed2}" TextColor="#10B981"/>
                                    <Span Text="0" FontAttributes="Bold" x:Name="CompletedNovelsLabel" TextColor="#10B981"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{extensions:Translate Paused2}" TextColor="#F59E0B"/>
                                    <Span Text="0" FontAttributes="Bold" x:Name="PausedNovelsLabel" TextColor="#F59E0B"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{extensions:Translate Cancelled2}" TextColor="{StaticResource Error}"/>
                                    <Span Text="0" FontAttributes="Bold" x:Name="CancelledNovelsLabel" TextColor="{StaticResource Error}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </HorizontalStackLayout>
                </Grid>

                <!-- Buscador -->
                <SearchBar Grid.Row="1"
                           x:Name="SearchBar"
                           Placeholder="{extensions:Translate SearchNovel}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                           BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLightLight},Dark={StaticResource BackgroundLight}}"
                           TextChanged="OnSearchTextChanged"/>
            </Grid>
        </Frame>

        <!-- BotÃ³n para agregar nueva novela -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="{extensions:Translate NewNovel}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    HeightRequest="45"
                    Margin="0,0,5,0"
                    Clicked="OnAddNovelClicked"/>

            <Button Grid.Column="1"
                    Text="{extensions:Translate Genres2}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    HeightRequest="45"
                    WidthRequest="120"
                    Margin="5,0,0,0"
                    Clicked="OnManageGenresClicked"/>
        </Grid>

        <!-- Lista de novelas -->
        <ScrollView Grid.Row="2">
            <CollectionView x:Name="NovelsCollection"
                            Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                               CornerRadius="10"
                               Padding="15"
                               Margin="0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Portada -->
                                <Frame Grid.Column="0"
                                       CornerRadius="5"
                                       Padding="0"
                                       HeightRequest="100"
                                       WidthRequest="80">
                                    <Image Source="{Binding CoverImageSource}"
                                           Aspect="AspectFill"/>
                                </Frame>

                                <!-- InformaciÃ³n -->
                                <VerticalStackLayout Grid.Column="1" 
                                                   Padding="10,0"
                                                   Spacing="5">
                                    <Label Text="{Binding Title}"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimary}}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Text="{Binding Author}"
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                                           FontSize="13"
                                           LineBreakMode="TailTruncation"/>

                                    <HorizontalStackLayout Spacing="15">
                                        <Label TextColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                                               FontSize="12">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ðŸ“– "/>
                                                    <Span Text="{Binding ChapterCount}"/>
                                                    <Span Text=" caps"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Frame BackgroundColor="{Binding StatusColor}"
                                               CornerRadius="10"
                                               Padding="8,4"
                                               VerticalOptions="Center">
                                            <Label Text="{Binding StatusText}"
                                                   TextColor="White"
                                                   FontSize="11"/>
                                        </Frame>
                                    </HorizontalStackLayout>

                                    <Label Text="{Binding UpdatedAtText}"
                                           TextColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMuted}}"
                                           FontSize="11"/>
                                </VerticalStackLayout>

                                <!-- Botones de acciÃ³n -->
                                <VerticalStackLayout Grid.Column="2"
                                                   Spacing="5"
                                                   VerticalOptions="Center">
                                    <!-- BotÃ³n Editar -->
                                    <Button Text="âœï¸"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            FontSize="18"
                                            Clicked="OnEditNovelClicked"
                                            CommandParameter="{Binding Id}"/>

                                    <!-- BotÃ³n Eliminar -->
                                    <Button Text="ðŸ—‘ï¸"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            FontSize="18"
                                            Clicked="OnDeleteNovelClicked"
                                            CommandParameter="{Binding Id}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Indicador de carga -->
        <ActivityIndicator Grid.Row="2"
                          x:Name="LoadingIndicator"
                          Color="{StaticResource Primary}"
                          IsVisible="False"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

        <!-- Estado vacÃ­o -->
        <VerticalStackLayout Grid.Row="2"
                           x:Name="EmptyState"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="20"
                           IsVisible="False">
            <Label Text="ðŸ“š"
                   FontSize="60"
                   HorizontalOptions="Center"/>
            <Label Text="{extensions:Translate NoNovelsRegistered}"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondary}}"
                   FontSize="16"
                   HorizontalOptions="Center"/>
            <Button Text="{extensions:Translate AddFirstNovel}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="20,10"
                    Clicked="OnAddNovelClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>