<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.ManageGenresPage"
             Title="Gestionar GÃ©neros"
             BackgroundColor="{StaticResource BackgroundDark}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header personalizado -->
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource BackgroundMedium}"
              Padding="10"
              HeightRequest="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource TextPrimary}"
                    WidthRequest="48"
                    HeightRequest="48"
                    Clicked="OnBackButtonClicked"/>

            <Label Grid.Column="1"
                   Text="Gestionar GÃ©neros"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>


        <!-- Agregar nuevo gÃ©nero -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource BackgroundMedium}"
               CornerRadius="10"
               Margin="10"
               Padding="15">
            <VerticalStackLayout Spacing="10">
                <Label Text="Agregar Nuevo GÃ©nero"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"/>

                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           x:Name="NewGenreEntry"
                           Placeholder="Nombre del gÃ©nero"
                           PlaceholderColor="{StaticResource TextMuted}"
                           TextColor="{StaticResource TextPrimary}"
                           BackgroundColor="{StaticResource BackgroundLight}"
                           Completed="OnAddGenreClicked"/>

                    <Button Grid.Column="1"
                            Text="Agregar"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnAddGenreClicked"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- EstadÃ­sticas -->
        <Label Grid.Row="1"
               x:Name="StatsLabel"
               Text="Total de gÃ©neros: 0"
               TextColor="{StaticResource TextSecondary}"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <!-- Lista de gÃ©neros -->
        <ScrollView Grid.Row="2">
            <CollectionView x:Name="GenresCollection"
                            Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="{StaticResource BackgroundMedium}"
                               CornerRadius="10"
                               Padding="15"
                               Margin="0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Nombre del gÃ©nero -->
                                <Label Grid.Column="0"
                                       Text="{Binding Name}"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="16"
                                       VerticalOptions="Center"/>

                                <!-- Contador de novelas -->
                                <Label Grid.Column="1"
                                       Text="{Binding NovelCountText}"
                                       TextColor="{StaticResource TextSecondary}"
                                       FontSize="12"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>

                                <!-- BotÃ³n eliminar -->
                                <Button Grid.Column="2"
                                        Text="ðŸ—‘ï¸"
                                        BackgroundColor="{StaticResource Error}"
                                        TextColor="White"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="20"
                                        FontSize="18"
                                        Clicked="OnDeleteGenreClicked"
                                        CommandParameter="{Binding Id}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Indicador de carga -->
        <ActivityIndicator Grid.Row="2"
                          x:Name="LoadingIndicator"
                          Color="{StaticResource Primary}"
                          IsVisible="False"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

        <!-- Estado vacÃ­o -->
        <VerticalStackLayout Grid.Row="2"
                           x:Name="EmptyState"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="20"
                           IsVisible="False">
            <Label Text="ðŸ·ï¸"
                   FontSize="60"
                   HorizontalOptions="Center"/>
            <Label Text="No hay gÃ©neros registrados"
                   TextColor="{StaticResource TextSecondary}"
                   FontSize="16"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>