<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:NovelBook.Extensions"
             x:Class="NovelBook.Views.CategoriesPage"
             Title="{extensions:Translate Categories}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header con estadÃ­sticas -->
        <Frame Grid.Row="0"
               BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
               CornerRadius="0"
               HasShadow="False"
               Padding="20">
            <StackLayout>
                <Label Text="{extensions:Translate MyCategories}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}}" />

                <Label x:Name="StatsLabel"
                       Text="0 categorÃ­as â€¢ 0 novelas organizadas"
                       FontSize="14"
                       TextColor="#B0B0B0"
                       Margin="0,5,0,0" />
            </StackLayout>
        </Frame>

        <!-- Lista de categorÃ­as o mensaje vacÃ­o -->
        <ScrollView Grid.Row="1" Padding="15">
            <StackLayout>
                <!-- Mensaje cuando no hay categorÃ­as -->
                <Frame x:Name="EmptyStateFrame"
                       IsVisible="True"
                       BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark={StaticResource BackgroundMedium}}"
                       CornerRadius="15"
                       Padding="30"
                       Margin="0,20">
                    <StackLayout Spacing="15" VerticalOptions="Center">
                        <Label Text="ðŸ“"
                               FontSize="60"
                               HorizontalOptions="Center" />

                        <Label Text="{extensions:Translate NoCategories}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                               HorizontalOptions="Center" />

                        <Label Text="Las categorÃ­as te ayudan a organizar tu biblioteca personal en grupos personalizados"
                               FontSize="14"
                               TextColor="#B0B0B0"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />

                        <Button Text="{extensions:Translate CreateFirstCategory}"
                                BackgroundColor="{StaticResource PrimaryColor}"
                                TextColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark=#606060}"
                                CornerRadius="20"
                                Padding="20,10"
                                HorizontalOptions="Center"
                                Clicked="OnAddCategoryClicked" />
                    </StackLayout>
                </Frame>

                <!-- Contenedor para las categorÃ­as -->
                <StackLayout x:Name="CategoriesContainer"
                             IsVisible="False"
                             Spacing="15">
                    <!-- Las categorÃ­as se agregarÃ¡n dinÃ¡micamente aquÃ­ -->
                </StackLayout>

                <!-- Indicador de carga -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   Color="{StaticResource PrimaryColor}"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>

        <!-- BotÃ³n flotante para agregar categorÃ­a -->
        <Button x:Name="AddCategoryButton"
                Text="+"
                FontSize="28"
                FontAttributes="Bold"
                BackgroundColor="{StaticResource PrimaryColor}"
                TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20"
                Clicked="OnAddCategoryClicked"
                IsVisible="False"
                Shadow="{Shadow Brush=Black, Offset='0,5', Radius=10, Opacity=0.3}" />
    </Grid>
</ContentPage>