<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.ReviewsPage"
             Title="Reseñas">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,*">

            <!-- Sección de estadísticas -->
            <Frame Grid.Row="0" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundMediumLight}, Dark=#1E1E1E}" 
                   CornerRadius="10" 
                   Margin="10"
                   Padding="15">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">

                    <!-- Título y rating promedio -->
                    <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="10">
                        <Label Text="Calificación promedio:" 
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark=White}" 
                               FontSize="18"
                               VerticalOptions="Center"/>
                        <Label x:Name="AverageRatingLabel" 
                               Text="0.0" 
                               TextColor="#FFD700" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="StarsLabel" 
                               Text="☆☆☆☆☆" 
                               TextColor="#FFD700" 
                               FontSize="20"
                               VerticalOptions="Center"/>
                    </StackLayout>

                    <!-- Total de reseñas -->
                    <Label Grid.Row="1" 
                           x:Name="TotalReviewsLabel" 
                           Text="0 reseñas" 
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},Dark=#808080}" 
                           FontSize="14"
                           Margin="0,5,0,10"/>

                    <!-- Distribución de ratings -->
                    <StackLayout Grid.Row="2" Spacing="5">
                        <!-- 5 estrellas -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="5 ★" TextColor="#FFD700" WidthRequest="40"/>
                            <ProgressBar Grid.Column="1" 
                                       x:Name="Stars5Bar" 
                                       Progress="0" 
                                       ProgressColor="#FFD700"
                                       BackgroundColor="{AppThemeBinding Light={StaticResource Gray300},Dark=#333333}"
                                       Margin="5,0"/>
                            <Label Grid.Column="2" x:Name="Stars5Count" Text="0" TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},Dark=White}" WidthRequest="30"/>
                        </Grid>

                        <!-- 4 estrellas -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="4 ★" TextColor="#FFD700" WidthRequest="40"/>
                            <ProgressBar Grid.Column="1" 
                                       x:Name="Stars4Bar" 
                                       Progress="0" 
                                       ProgressColor="#FFD700"
                                       BackgroundColor="#333333"
                                       Margin="5,0"/>
                            <Label Grid.Column="2" x:Name="Stars4Count" Text="0" TextColor="White" WidthRequest="30"/>
                        </Grid>

                        <!-- 3 estrellas -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="3 ★" TextColor="#FFD700" WidthRequest="40"/>
                            <ProgressBar Grid.Column="1" 
                                       x:Name="Stars3Bar" 
                                       Progress="0" 
                                       ProgressColor="#FFD700"
                                       BackgroundColor="#333333"
                                       Margin="5,0"/>
                            <Label Grid.Column="2" x:Name="Stars3Count" Text="0" TextColor="White" WidthRequest="30"/>
                        </Grid>

                        <!-- 2 estrellas -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="2 ★" TextColor="#FFD700" WidthRequest="40"/>
                            <ProgressBar Grid.Column="1" 
                                       x:Name="Stars2Bar" 
                                       Progress="0" 
                                       ProgressColor="#FFD700"
                                       BackgroundColor="#333333"
                                       Margin="5,0"/>
                            <Label Grid.Column="2" x:Name="Stars2Count" Text="0" TextColor="White" WidthRequest="30"/>
                        </Grid>

                        <!-- 1 estrella -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="1 ★" TextColor="#FFD700" WidthRequest="40"/>
                            <ProgressBar Grid.Column="1" 
                                       x:Name="Stars1Bar" 
                                       Progress="0" 
                                       ProgressColor="#FFD700"
                                       BackgroundColor="#333333"
                                       Margin="5,0"/>
                            <Label Grid.Column="2" x:Name="Stars1Count" Text="0" TextColor="White" WidthRequest="30"/>
                        </Grid>
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Botón para escribir reseña -->
            <Button Grid.Row="1"
                    x:Name="WriteReviewButton"
                    Text="Escribir reseña"
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="10,0,10,10"
                    Clicked="OnWriteReviewClicked"/>

            <!-- Lista de reseñas -->
            <ScrollView Grid.Row="2">
                <StackLayout x:Name="ReviewsContainer" Padding="10" Spacing="10">
                    <!-- Las reseñas se agregarán dinámicamente aquí -->

                    <!-- Mensaje cuando no hay reseñas -->
                    <Label x:Name="NoReviewsLabel"
                           Text="Aún no hay reseñas. ¡Sé el primero en escribir una!"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},Dark=#808080}"
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand"
                           FontSize="16"
                           IsVisible="False"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>

    <!-- Modal para escribir/editar reseña -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="StarButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="#FFD700"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="WidthRequest" Value="50"/>
                <Setter Property="HeightRequest" Value="50"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>