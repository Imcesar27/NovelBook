<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovelBook.Views.AddTagPage"
             Title="Agregar Etiqueta">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20">

        <!-- Campo de entrada -->
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Text="Escribe o selecciona una etiqueta:"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
            <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Entry x:Name="TagEntry"
                       Placeholder="Ej: Protagonista OP, Romance lento..."
                       MaxLength="25"
                       TextChanged="OnTagEntryTextChanged"
                       BackgroundColor="Transparent"/>
            </Frame>
            <Label x:Name="CharCountLabel"
                   Text="0/25 caracteres"
                   FontSize="11"
                   TextColor="{AppThemeBinding Light=#888888, Dark=#AAAAAA}"
                   HorizontalOptions="End"/>
        </VerticalStackLayout>

        <!-- Etiquetas sugeridas (filtradas) -->
        <VerticalStackLayout Grid.Row="1" Margin="0,15,0,0">
            <Label x:Name="SuggestionsLabel"
                   Text="Sugerencias:"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
            <ScrollView HeightRequest="120" Margin="0,10,0,0">
                <FlexLayout x:Name="SuggestionsContainer"
                            Wrap="Wrap"
                            Direction="Row"
                            JustifyContent="Start"
                            AlignItems="Start">
                    <!-- Se llena dinÃ¡micamente -->
                </FlexLayout>
            </ScrollView>
        </VerticalStackLayout>

        <!-- Etiquetas populares -->
        <VerticalStackLayout Grid.Row="2" Margin="0,20,0,0">
            <Label Text="ðŸ”¥ Etiquetas populares:"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
            <ScrollView HeightRequest="150" Margin="0,10,0,0">
                <FlexLayout x:Name="PopularTagsContainer"
                            Wrap="Wrap"
                            Direction="Row"
                            JustifyContent="Start"
                            AlignItems="Start">
                    <!-- Se llena dinÃ¡micamente -->
                </FlexLayout>
            </ScrollView>
        </VerticalStackLayout>

        <!-- Botones -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="15" VerticalOptions="End">
            <Button Text="Cancelar"
                    BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#3D3D3D}"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                    CornerRadius="10"
                    Clicked="OnCancelClicked"/>
            <Button Grid.Column="1"
                    x:Name="AddButton"
                    Text="Agregar"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="10"
                    IsEnabled="False"
                    Clicked="OnAddClicked"/>
        </Grid>
    </Grid>
</ContentPage>